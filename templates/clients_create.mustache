<div class="panel panel-default">
  <ol class="breadcrumb pull-left" style="margin-top:8px;margin-bottom:0px;">
    <li><a href="/clients">Clients</a></li>
    <li>Create</li>
  </ol>
  <div class="panel-heading clearfix"></div>

  <div class="panel-body">
	  <form role="form" action="/clients/create" method="post">
		<div class="form-group">
		  <label for="company">Company</label>
		  <input type="text" class="form-control" id="company" name="company" placeholder="Enter company" required>
		</div>
		<div class="form-group">
		  <label for="company">Buyer</label>
		  <input type="text" class="form-control" id="buyer" name="buyer" placeholder="Enter buyer" required>
		</div>
		<div class="form-group">
		  <label for="company">Teritory</label>
      <select class="form-control" id="teritory" name="teritory">
          <option>Please select...</option>
          <option>Belgium Flemish</option>
          <option>Netherlands</option>
          <option>UK</option>
          <option>Estonia</option>
          <option>Sweden</option>
          <option>Norway</option>
          <option>Finland</option>
          <option>Denmark</option>
          <option>Iceland</option>
      </select>

		</div>

		<button type="submit" class="btn btn-default">Create</button>
	  </form>
  </div>
</div>
